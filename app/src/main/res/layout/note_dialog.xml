<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    app:cardCornerRadius="20dp"
    android:background="#F3F2F7"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    android:padding="5dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_note_bg"
    android:weightSum="6"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/note"
            android:text="Notes:"
            android:textColor="@color/purbleApp"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_baseline_cancel_24"
            app:backgroundTint="@color/icon_color" />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="5dp"
        android:layout_weight="5"
        android:layout_marginBottom="5dp"
        tools:listitem="@layout/note_item" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

            <EditText
                android:id="@+id/type_note_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="9dp"
                android:layout_marginEnd="35dp"
                android:padding="4dp"
                android:background="@drawable/custome_edit_text"
                android:hint="Type a Note"
                android:visibility="gone" />
            <Button
                android:id="@+id/saveNoteBtn"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:padding="10dp"
                android:layout_alignParentEnd="true"
                app:backgroundTint="@color/purbleApp"
                android:background="@drawable/send" />

        <Button
            android:id="@+id/addNoteBtn"
            android:visibility="visible"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            app:backgroundTint="@color/purbleApp"
            android:background="@drawable/add"  />




    </RelativeLayout>
</LinearLayout>



</androidx.cardview.widget.CardView>